@model Models.ReservationComment
    <div>
        <form method="POST" asp-page-handler="addcomment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Comment" class="control-label">Rašyti komentarą: </label>
            <textarea asp-for="Comment" class="form-control" placeholder="Vieta komentarui" rows="2"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
            <p/>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Pridėti komentarą</button>
            </div>
            <input type="hidden" asp-for="ReservationId">
        </form>
        </div>
