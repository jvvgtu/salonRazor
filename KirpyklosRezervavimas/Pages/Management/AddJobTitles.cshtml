@page
@model SalonWithRazor.Pages.Management.AddJobTitlesModel
@{
    ViewData["Title"] = "Pridėti profesijas";
}


<h1>@ViewData["Title"]</h1>



    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="JobTitle.Name" class="control-label"></label>
                    <input asp-for="JobTitle.Name" class="form-control" />
                    <span asp-validation-for="JobTitle.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Pridėti" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


<table class="table" style="max-width: 300px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobTitles[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitles[0].Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.JobTitles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}