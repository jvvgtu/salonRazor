@page
@model SalonWithRazor.ListModel

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Salon[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salon[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salon[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salon[0].City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Salon) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Id)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.Id">Index</a>
            </td>
        </tr>
}
    </tbody>
</table>
